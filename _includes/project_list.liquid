<div class="project_list">
  {% if site.project_list != blank %}
    {% assign project_list_size = site.project_list | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.project_list.scrollable and project_list_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign project_list = site.project_list | reverse %}
        {% if include.limit and page.project_list.limit %}
          {% assign project_list_limit = page.project_list.limit %}
        {% else %}
          {% assign project_list_limit = project_list_size %}
        {% endif %}
        {% for item in project_list limit: project_list_limit %}
          <tr>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="project_list-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
